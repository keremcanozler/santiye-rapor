<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AYARLAR"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/slate_800"
        android:layout_marginBottom="32dp"/>

    <!-- Logo Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ŞİRKET LOGOSU"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/slate_600"
        android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/imgLogoPreview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_image_placeholder"
            android:scaleType="fitCenter"
            android:background="#F0F0F0"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btnUploadLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo Yükle"
            android:layout_marginStart="16dp"
            android:textColor="@color/gazioglu_blue"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>

    <!-- Data Management -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VERİ YÖNETİMİ"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/slate_600"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnExportData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verileri Yedekle (Dışa Aktar)"
        android:backgroundTint="@color/slate_800"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnImportData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yedekten Geri Yükle (İçe Aktar)"
        android:background="@drawable/bg_button_outlined"
        android:textColor="@color/slate_800"/>

    <Button
        android:id="@+id/btnResetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tüm Verileri Sıfırla"
        android:layout_marginTop="24dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#FF0000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="v7.0.0 (Native Release)"
        android:gravity="center"
        android:layout_marginTop="64dp"
        android:textColor="@color/slate_400"
        android:textSize="12sp"/>

</LinearLayout>
